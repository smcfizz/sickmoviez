                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 8. Harry Potter and the Deathly Hallows: Part 2
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt2294629/?ref_=fn_al_tt_1')
                      img(src='/images/frozen.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 9. Frozen
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt2771200/')
                      img(src='/images/beauty.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 10. Beauty and the Beast
                  button.w3-button.w3-display-left.w3-black(onclick='plusDivs(-1)') &#x276E;
                  button.w3-button.w3-display-right.w3-black(onclick='plusDivs(1)') &#x276F;
                script.
                  var slideIndex = 1;
                  showDivs(slideIndex);
                  function plusDivs(n) {
                  showDivs(slideIndex += n);
                  }
                  function showDivs(n) {
                  var i;
                  var x = document.getElementsByClassName("mySlides");
                  if (n > x.length) {slideIndex = 1}
                  if (n < 1) {slideIndex = x.length}
                  for (i = 0; i < x.length; i++) {
                  x[i].style.display = "none";
                  }
                  x[slideIndex-1].style.display = "block";
                  }

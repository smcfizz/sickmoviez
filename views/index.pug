// Begin page
#wrapper
  // ==============================================================
  // Start Page Content here
  // ==============================================================
  .content-page
    .content
      // Topbar Start
      .navbar-custom
        a.logo.text-center.d-none.d-md-inline-block.mr-2(href='/')
          span.logo-lg
            img(src='assets/images/logo.png' alt='' height='30')
          if isSignedIn
            a(href= '/user/' + username) Welcome, #{username}
          else
            a(href= '/login/') Sign in
        button.btn.btn-sm.btn-danger.d-inline-block.d-lg-none.button-menu-mobile(type='button') Menu
        span.badge.badge-dark.float-right 
          form(action="/search", method="get").form-inline
            input.form-control.mr-sm-2(type='text' placeholder='Search Sickmoviez' aria-label='Search', id="title", name="title", autocomplete="off", autofocus)
            input(hidden, id="ac", name="ac", value="true")
            input(hidden, id="start", name="start", value="0")
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
      // end Topbar
      // Start Content
      .container-fluid
        .page-wrapper
          .left-sidebar
            .slimscroll-menu
              .list-group.list-group-transparent.mb-0
                span.list-group-item.disabled
                  | Getting Started
                a.list-group-item.list-group-item-action(href='/about')
                  span.mr-2
                    i.mdi.mdi-flag-variant-outline
                  | Introduction
                a.list-group-item.list-group-item-action(href='/signup')
                  span.mr-2
                    i.mdi.mdi-square-edit-outline
                  | FREE Sign-Up!
                span.list-group-item.disabled
                  | Members
                a.list-group-item.list-group-item-action(href='login')
                  span.mr-2
                    i.mdi.mdi-menu
                  | Login
                a.list-group-item.list-group-item-action(href= '/user/' + username)
                  span.mr-2
                    i.mdi.mdi-page-layout-sidebar-left
                  | My Profile
                
          // end left-sidebar
          .page-content
            .card
              .card-body
                .p-lg-1
                link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
                style.
                  .mySlides {display:none;}
                .w3-container
                  h2(style = 'text-align: center') Today's Highest-Grossing Movies

                .w3-content.w3-display-container
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt0499549/')
                      img(src='/images/avatar.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      |  
                      a(href='https://www.imdb.com/title/tt0499549/') 1. Avatar
                
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt2488496/?ref_=nv_sr_1')
                      img(src='/images/starwars.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 
                      a(href='https://www.imdb.com/title/tt2488496/?ref_=nv_sr_1') 2. Star Wars: The Force Awakens
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt0120338/?ref_=nv_sr_1')
                      img(src='/images/titanic.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 3. Titanic
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt0848228/?ref_=nv_sr_4')
                      img(src='/images/avengers.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 4. The Avengers
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt0369610/?ref_=nv_sr_2')
                      img(src='/images/jurrassic.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 5. Jurrassic World
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt2820852/?ref_=fn_al_tt_1')
                      img(src='/images/furious7.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 6. Furious 7
                  .w3-display-container.mySlides
                    a(href='https://www.imdb.com/title/tt2395427/?ref_=nv_sr_1')
                      img(src='/images/avengersaou.jpg' style='width:100%')
                    .w3-display-bottomleft.w3-large.w3-container.w3-padding-16.w3-black
                      | 7. Avengers: Age Of Ultron
                  .w3-display-container.mySlides

// Begin page
.wrapper
  | @@include(&apos;./partials/left-sidebar.html&apos;)
  // ==============================================================
  // Start Page Content here
  // ==============================================================
  .content-page
    .content
      .navbar-custom
        a.logo.text-center.d-none.d-md-inline-block.mr-2(href='/')
          span.logo-lg
            img(src='../../../assets/images/logo.png' alt='' height='30')
          if isSignedIn
            a(href= '/user/' + username) Welcome, #{username}
          else
            a(href= '/login/') Sign in
        button.btn.btn-sm.btn-danger.d-inline-block.d-lg-none.button-menu-mobile(type='button') Menu
        span.badge.badge-dark.float-right 
          form(action="/search", method="get").form-inline
            input.form-control.mr-sm-2(type='text' placeholder='Search Sickmoviez' aria-label='Search', id="title", name="title", autocomplete="off", autofocus)
            input(hidden, id="ac", name="ac", value="true")
            input(hidden, id="start", name="start", value="0")
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
      | @@include(&apos;./partials/topbar.html&apos;)
      // Start Content
      .container-fluid
        // start page title
        .row
          .col-12
            .page-title-box
              .page-title-right
                ol.breadcrumb.m-0
                  li.breadcrumb-item
                    a(href='javascript: void(0);') Main Page
                  li.breadcrumb-item.active Movie Details
              h1= title
        // end page title
        .row
          .col-12
            .card
              .card-body
                .row
                  .col-lg-5
                    img(src='https://image.tmdb.org/t/p/w600_and_h900_bestv2/' + profile style='width:50%' )
                  // end col
                  .col-lg-7
                    

              h2 Movies Worked On:
              table#basic-datatable.table.dt-responsive.nowrap
                thead.thead-light
                  tr
                    th Movie Poster
                    th Movie Title
                    th Role
                    th .
                tbody
                  ol 
                   each val in movies 
                    tr
                      td 
                        img(src='https://image.tmdb.org/t/p/w600_and_h900_bestv2/' + val.poster_path style='width:15%')
                      td
                        a(href='/detail/movie/' + val.id) #{val.title} 
                        li           
                          ul
                            each cast in val.cast
                                if cast.id == personId
                                  td
                                    li Cast: #{cast.character}
                            each crew in val.crew
                                if crew.id == personId
                                  td
                                    li Crew Job: #{crew.department} (#{crew.job})                 
                                
              // end card-body
            // end card
          // end col
        // end row
      // container
    // content








